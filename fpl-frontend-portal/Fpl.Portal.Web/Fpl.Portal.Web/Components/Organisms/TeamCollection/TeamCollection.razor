@using Fpl.Portal.Web.Models.Teams

<style>
    h3 {
        margin: 10px 0;
    }
    
    h6 {
        margin: 5px 0;
    }
    
    p {
        font-size: 14px;
        line-height: 21px;
    }
    
    .card-container {
        background-color: #231E39;
        border-radius: 5px;
        box-shadow: 0px 10px 20px -10px rgba(0,0,0,0.75);
        color: #B3B8CD;
        padding-top: 30px;
        padding-bottom: 30px;
        position: relative;
        width: 350px;
        max-width: 100%;
        text-align: center;
    }
    
    .skills ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }
    
    .skills ul li {
        border: 1px solid #2D2747;
        border-radius: 2px;
        display: inline-block;
        font-size: 12px;
        margin: 0 7px 7px 0;
        padding: 7px;
    }
</style>

@for (var i =0; i < Count; i++)
{
    var teamRowList = Teams.Skip(i * ItemsPerRow).Take(ItemsPerRow).ToList();
    
    <div class="row mt-3">
        @foreach (var item in teamRowList)
        {
            var teamPhotoUrl = $"https://resources.premierleague.com/premierleague/badges/t{item.Code}.png";
            <div class="col-md-3 mb-2">
                <div class="card-container">
                    <Card ImageSrc="@teamPhotoUrl"
                          Title="@item.ShortName"
                          Text="@item.Name"
                          ImageWidth="25"/>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public int Count { get; set; }
    
    [Parameter]
    public int ItemsPerRow { get; set; }

    [Parameter]
    public IEnumerable<Team> Teams { get; set; } = null!;

}